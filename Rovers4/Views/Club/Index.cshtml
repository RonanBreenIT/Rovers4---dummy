@model IEnumerable<Club>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (!Model.Any())
{
    <p>
        <a class="btn btn-outline-success" asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.ClubID">Edit</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ClubID">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClubID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
