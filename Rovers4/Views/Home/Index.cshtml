@model IEnumerable<Club>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @*<div class="text-center">
        <h1>Rathfarnham Rovers</h1>
    </div>*@
    <div class="container">
        <div class="card-columns">
            <div class="card" id="cardHome">
                <a asp-controller="Home" asp-action="ClubDetails">
                    <img class="card-img-top" src="https://ronansstoragecccount.blob.core.windows.net/uploads/2020-10-22/20201022T184404658.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Find out about the Club</h5>
                        <p class="card-text">
                            Find out about the history of Rathfarnham Rovers, it's current Management Committee and view the latest Club Images...
                        </p>
                        <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>
                    </div>
                </a>
            </div>
            <div class="card" id="cardHome">
                <a asp-controller="Team" asp-action="Index">
                    <img class="card-img-top" src="https://ronansstoragecccount.blob.core.windows.net/uploads/2020-10-22/20201022T184905094.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Come meet our Teams</h5>
                        <p class="card-text">View all Rathfarnham Rovers Teams from Adult all the way down to Juvenile level.</p>
                        <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>
                    </div>
                </a>
            </div>
            <div class="card" id="cardHome">
                <a href="#">
                    <img class="card-img-top" src="https://images.unsplash.com/photo-1535074153497-b08c5aa9c236?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=d2aaf944a59f16fe1fe72f5057b3a7dd&auto=format&fit=crop&w=500&q=80" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">View the Latest Products</h5>
                        <p class="card-text">Shop the latest Club gear.</p>
                        <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>
                    </div>
                </a>
            </div>
            <div class="card" id="cardHome">
                <a asp-controller="PlayerStat" asp-action="PlayerStatList" asp-route-id="32">
                    <img class="card-img-top" src="https://ronansstoragecccount.blob.core.windows.net/uploads/2020-10-22/20201022T184949649.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Player of the Week!</h5>
                        <p class="card-text">View some stats and details for the latest in-form First Team Player</p>
                        <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>
                    </div>
                </a>
            </div>
            <div class="card" id="cardHome">
                <a asp-controller="Home" asp-action="Contact">
                    <img class="card-img-top" src="https://ronansstoragecccount.blob.core.windows.net/images/Club/ClubImage3Med.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Club Contact Details</h5>
                        <p class="card-text">
                            Club Address, Email, Contact Number and Location can be found here.. dont hesitate to get in touch with us!!
                        </p>
                        <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>
                    </div>
                </a>
            </div>
            <div class="card" id="cardHome">
                <a href="#">
                    <img class="card-img-top" src="https://ronansstoragecccount.blob.core.windows.net/images/Spon1.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Club Sponsors</h5>
                        <p class="card-text">View all the Club Sponsors, supporting the development of coaches, players and continued support and funding of Rathfarnham Rovers. Find out how your company can join the party!</p>
                        <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>
                    </div>
                </a>
            </div>
        </div>
