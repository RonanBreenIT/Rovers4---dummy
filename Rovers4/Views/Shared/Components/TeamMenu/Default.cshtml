@model IEnumerable<Team>

<li class="dropdown">
    <a asp-controller="Team"
       asp-action="Index"
       class="dropdown" data-toggle="dropdown">Teams<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var team in Model)
        {
            <li>
                <a asp-controller="Team" asp-action="TeamPlayerList"
                   asp-route-id="@team.TeamID">@team.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Team" asp-action="Index" asp-route-Category="">All Teams</a>
        </li>
    </ul>
</li>