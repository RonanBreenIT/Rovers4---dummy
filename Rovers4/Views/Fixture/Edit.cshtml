@model Fixture

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Fixture Details - @ViewBag.CurrentTeam</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FixtureID" />
            <input type="hidden" asp-for="TeamID" />
            <div class="form-group">
                <label asp-for="FixtureType" class="control-label"></label>
                <select asp-for="FixtureType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Rovers4.Models.FixtureType>()">
                    <option>Select type ...</option>
                </select>
                <span asp-validation-for="FixtureType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FixtureDate" class="control-label"></label>
                <input asp-for="FixtureDate" class="form-control" />
                <span asp-validation-for="FixtureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeOrAway" class="control-label"></label>
                <select asp-for="HomeOrAway"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Rovers4.Models.HomeOrAway>()">
                    <option>Select type ...</option>
                </select>
                <span asp-validation-for="HomeOrAway" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opponent" class="control-label"></label>
                <input asp-for="Opponent" class="form-control" />
                <span asp-validation-for="Opponent" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OurScore" class="control-label"></label>
                <input asp-for="OurScore" class="form-control" />
                <span asp-validation-for="OurScore" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OpponentScore" class="control-label"></label>
                <input asp-for="OpponentScore" class="form-control" />
                <span asp-validation-for="OpponentScore" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label type="hidden" asp-for="ResultDescription" class="control-label"></label>
                <select asp-for="ResultDescription"
                        asp-items="Html.GetEnumSelectList<Rovers4.Models.ResultDescription>()">
                    <option type="hidden">Select type ...</option>
                </select>
                <span asp-validation-for="ResultDescription" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MatchReport" class="control-label"></label>
                <input asp-for="MatchReport" class="form-control" />
                <span asp-validation-for="MatchReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-controller="Team" asp-action="Index">Back to Team List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
