@model FixtureListViewModel

@{
    ViewData["Title"] = "Team Fixture List";
}

<h1>@Model.CurrentTeam</h1>

@if ((this.User.IsInRole("Super Admin")) || (this.User.IsInRole(Model.CurrentTeam)))
{
    <p>
        <a asp-controller="Fixture" asp-action="Create">Add Fixture</a><span>&nbsp; &nbsp;| &nbsp; &nbsp;</span>

        @foreach (var team in @Model.Teams)
        {
            if (team.Name == Model.CurrentTeam)
            {
                <a asp-controller="Team" asp-action="sendGridEmail" asp-route-id="@team.TeamID">Send Fixture Alert</a><span>&nbsp; &nbsp;&nbsp; &nbsp;</span>

            }
        }
    </p>
}

@if (Model.JanuaryFixtures.Count() > 0)
{
    <section>
        <header>
            <h3>
                January
            </h3>
        </header>
        @foreach (var fixture in Model.JanuaryFixtures)
        {
            <div class="container" id="fixtureCon">
                <div class="row" id="fixtureRow">
                    <p id="fixtureP">
                        <p class="col-sm-3" id="datesText">@Html.DisplayFor(modelItem => fixture.FullDatesText)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
                        <p class="col" id="fixtureText">Rathfarnham Rovers&nbsp;&nbsp;@Html.DisplayFor(modelItem => fixture.FinalScore)&nbsp;&nbsp;@Html.DisplayFor(modelItem => fixture.Opponent)&nbsp;&nbsp;(@Html.DisplayFor(modelItem => fixture.HomeOrAwayToShortString))</p>
                        @*<p class="col" id="venue">(@Html.DisplayFor(modelItem => fixture.HomeOrAway))</p>*@
                    </p>
                    @if ((this.User.IsInRole("Super Admin")) || (this.User.IsInRole(Model.CurrentTeam)))
                    {
                        <p class="col-sm-3">
                            <a asp-controller="fixture" asp-action="ResultDetails" asp-route-id="@fixture.FixtureID">Details</a> |
                            <a asp-controller="fixture" asp-action="Edit" asp-route-id="@fixture.FixtureID">Edit</a> |
                            <a asp-controller="fixture" asp-action="Delete" asp-route-id="@fixture.FixtureID">Delete</a> |
                            <a asp-controller="fixture" asp-action="AddResult" asp-route-id="@fixture.FixtureID">Add Result</a>
                        </p>
                    }
                </div>
            </div>
        }
    </section>
}

