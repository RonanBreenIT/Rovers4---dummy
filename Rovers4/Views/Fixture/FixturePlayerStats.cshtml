@model FixturePlayerStatsViewModel

@{
    ViewData["Title"] = "FixturePlayerStats";
}

<h1>Add Player Stats for the @Model.Team.Name Fixture</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<p>@Html.HiddenFor(m => m.FixtureID)</p>

<div class="container" id="fixtureCon">
    <div class="row" id="fixtureRow">
        <p id="fixtureP">
        <p style="font-weight: bold" id="datesText">@Html.DisplayFor(modelItem => Model.Fixture.FullDatesText)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
        <p class="col" id="fixtureText">Rathfarnham Rovers&nbsp;&nbsp;@Html.DisplayFor(modelItem => Model.Fixture.FinalScore)&nbsp;&nbsp;@Html.DisplayFor(modelItem => Model.Fixture.Opponent)&nbsp;&nbsp;(@Html.DisplayFor(modelItem => Model.Fixture.HomeOrAwayToShortString))</p>
    </div>
</div>

        <div>
            <table id="FixturePlayerStatsTable" class="table" cellspacing="0">
                <thead>
                    <tr>
                        <th><p>Player</p></th>
                        <th><p>Played</p></th>
                        <th><p>Assists</p></th>
                        <th><p>Goals</p></th>
                        <th><p>Cleansheet</p></th>
                        <th><p>Red Card</p></th>
                        <th><p>Man of the Match</p></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Players.Count(); i++)
                    {
                        @Html.HiddenFor(m => m.Players[i].PersonID)
                        <tr>
                            <td class="text-center">
                                <input asp-for="Players[i].FullName" class="form-control" />
                            </td>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input" asp-for="Players[i].Played" />
                            </td>
                            <td class="text-center">
                                <input type="number" asp-for="Players[i].Assists" class="form-control" />
                            </td>
                            <td class="text-center">
                                <input type="number" asp-for="Players[i].Goals" class="form-control" />
                            </td>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input" asp-for="Players[i].CleanSheet" />
                            </td>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input" asp-for="Players[i].RedCards" />
                            </td>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input" asp-for="Players[i].MotmAward" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="form-group" style="margin-top: 1rem">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        }
